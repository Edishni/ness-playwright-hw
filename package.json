{
  "name": "ness-playwright-hw",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "prepare": "npx playwright install",
    "build": "tsc -p tsconfig.json",
    "test": "npx playwright test",
    "test:headed": "npx playwright test --headed",
    "test:workers": "npx playwright test --workers=3",
    "test:allure": "npx playwright test && npm run allure:serve",
    "allure:generate": "npx allure generate ./allure-results --clean -o ./allure-report",
    "allure:open": "npx allure open ./allure-report",
    "allure:serve": "npx allure serve ./allure-results",
    "allure:clean": "Remove-Item -Recurse -Force ./allure-results, ./allure-report -ErrorAction SilentlyContinue",
    "clean:reports": "pwsh -ExecutionPolicy Bypass -File ./clean-reports.ps1"
  },
  "devDependencies": {
    "@playwright/test": "1.44.0",
    "@types/node": "^24.10.1",
    "allure-commandline": "^2.13.10",
    "allure-playwright": "^2.0.0",
    "typescript": "^5.2.2"
  }
}
